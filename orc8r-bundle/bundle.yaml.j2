      magma-nms-magmalte-image: ghcr.io/canonical/magma-orc8r-nms-magmalte:1.8.0
    {%- else %}
    charm: magma-nms-magmalte
    channel: {{ channel|default("edge") }}
    {%- endif %}
    scale: 1
    trust: true
  nms-nginx-proxy:
    {%- if local == true %}
    charm: ./magma-nms-nginx-proxy_ubuntu-22.04-amd64.charm
