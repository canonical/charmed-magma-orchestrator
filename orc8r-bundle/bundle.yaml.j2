    charm: fluentd-elasticsearch
    channel: edge
    scale: 1
    trust: true
    options:
      domain: "example.com"
      elasticsearch-url: "orc8r-elasticsearch:1234"
      fluentd-chunk-limit-size: "2M"
      fluentd-queue-limit-length: 8
